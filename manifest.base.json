{
  "manifest_version": 3,
  "name": "Serializd-Plex",
  "version": "1.0.0",
  "description": "When using Plex on the web via app.plex.tv or locally, a badge with a Serializd rating (clickable link!) is shown on your TV show page.",
  "browser_specific_settings": {
    "gecko": {
      "id": "rauno.villberg@gmail.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": [
          "websiteContent"
        ]
      }
    }
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.plex.tv/desktop/*",
    "http://127.0.0.1:32400/web/*",
    "http://127.0.0.1/web/*",
    "https://www.serializd.com/*",
    "*://*.plex.direct/*",
    "*://*.plex.tv/*"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.plex.tv/desktop/*",
        "http://127.0.0.1:32400/web/*",
        "http://127.0.0.1/web/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon-16.png"
      ],
      "matches": [
        "https://app.plex.tv/*",
        "http://127.0.0.1/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
